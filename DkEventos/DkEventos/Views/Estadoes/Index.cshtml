@model IEnumerable<DkEventos.Estado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<aside class="right-side">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cancelado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento.titulo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cancelado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evento.titulo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idEstado }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idEstado }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idEstado })
                </td>
            </tr>
        }

    </table>
    </aside>